<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:orientation="horizontal"
    android:weightSum="1" >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/teacher_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/teacher_picture"
        android:background="@drawable/shadow"
        
        android:dividerPadding="5dp"
        android:orientation="vertical"
        android:showDividers="middle"
        android:weightSum="1" >

        <TextView
            android:id="@+id/positionteacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="26dp"
            android:layout_weight="0.33333"
            android:fontFamily="arial"
            android:gravity="center"
            android:text="position"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#33b5e5"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailTeacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3333"
            android:fontFamily="arial"
            android:gravity="center"
            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#33b5e5"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/facultyTeacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp"
            android:layout_weight="0.33333"
            android:fontFamily="arial"
            android:gravity="center"
            android:text="Faculty"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#33b5e5"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/nameteacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teacher_picture"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/teacher_picture"
        android:layout_marginRight="16dp"
        android:layout_weight="0.20"
        android:fontFamily="arial"
        android:gravity="center"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#33b5e5"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>